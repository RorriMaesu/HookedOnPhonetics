root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json,yml,yaml}]
indent_size = 2

[*.{css,scss,less}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{py}]
indent_size = 4

[Makefile]
indent_style = tab
